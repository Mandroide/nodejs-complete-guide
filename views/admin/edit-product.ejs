<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
<%- include('../includes/navigation.ejs') %>
<main>
    <% if (errorMessage) { %>
        <div class="user-message user-message--error">
            <%= errorMessage %>
        </div>
    <% } %>
    <form class="product-form" action="/admin/<%= editing ? 'edit' : 'add' %>-product" method="post">
        <div class="form-control">
            <label for="title">Title</label>
            <input class="<%= validationErrors.find(e => e.param === 'title') ? 'invalid': ''%>" type="text" name="title" id="title" value="<%= editing || hasError ? product.title : '' %>" placeholder="Title"
                   required>
        </div>
        <div class="form-control">
            <label for="imageUrl">Image URL</label>
            <input class="<%= validationErrors.find(e => e.param === 'imageUrl') ? 'invalid': ''%>" type="url" name="imageUrl" id="imageUrl" value="<%= editing || hasError ? product.imageUrl : '' %>" required>
        </div>
        <div class="form-control">
            <label for="price">Price</label>
            <input class="<%= validationErrors.find(e => e.param === 'price') ? 'invalid': ''%>" type="number" name="price" id="price" step="0.01" min="0" value="<%= editing || hasError ? product.price : '' %>"
                   required>
        </div>
        <div class="form-control">
            <label for="description">Description</label>
            <textarea class="<%= validationErrors.find(e => e.param === 'description') ? 'invalid': ''%>" name="description" id="description" rows="5"
                      required><%= editing || hasError ? product.description : '' %></textarea>
        </div>
        <% if (editing) { %>
            <input type="hidden" name="id" value="<%= editing ? product._id : '' %>">
        <% } %>
        <input type="hidden" name="CSRFToken" value="<%= csrfToken %>">
        <button class="btn" type="submit"><%= editing ? 'Update Product' : 'Add Product' %></button>
    </form>
</main>
<%- include('../includes/end.ejs') %>
